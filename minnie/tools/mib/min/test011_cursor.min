
; tests instanced path rendering (cursor translation)

; geo_scale / geo_div scales framebuffers, blits, and paths
geo_div 1

; seg_scale scales number of path subdivision segments (splines, ellipses, round line joints)
;seg_scale 0.125

geo 640 480
pal #eee #6db #547 #7cb #fff #9dc #779 #498

; clear screen
f 0

; define (closed) ellipse path
p myellipse
seg 24
e 110 110
z

; draw stroked paths
i 6
k 4
seg 8
h bevel

M 160 180
d myellipse

m 160 0
d myellipse

m 160 0
d myellipse

m -320 120
d myellipse

m 160 0
d myellipse

m 160 0
d myellipse

; draw filled path
i 3
k fill
seg 8
h b

M 160 180
d myellipse

m 160 0
d myellipse

m 160 0
d myellipse

m -320 120
d myellipse

m 160 0
d myellipse

m 160 0
d myellipse
