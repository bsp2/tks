
geo 640 480

;   0    1    2    3    4    5    6    7
pal #edb #8ca #9ba #7cb #fff #9dc #555 #333

pal_hsv 40 0.6 0.8
pal_contrast 2.5
pal_brightness 0.8

; clear screen
f 0

; define paths
p mypath
M -100 -100
r 200 200
z

p mypath2
M -50 -50
r 100 100
z


M 320 240

;w3 100 100 160 120
w3fb

;   frustum(-2 2  -2 2  1 10)

k fill

; center
i 1
q rotate(-75 0 0) translate(0 0 0) scale(0.1 0.1 0.01) translate(0 0 0.4) scale(10 6 1)
d3 mypath

; "walls" (white quads)
i 4
q rotate(0 0 0) translate(-615 0 100) scale(0.01 0.11 0.01) translate(0 0 0.4) scale(10 6 1)
d3 mypath2
q rotate(0 0 0) translate( 100 0  0) scale(0.01 0.017 0.01) translate(0 0 0.4) scale(10 6 1)
d3 mypath2
q rotate(0 0 0) translate( 600 0  10) scale(0.01 0.01 0.01) translate(0 0 0.1) scale(10 6 1)
d3 mypath2

; "ramps"
i 5
q rotate(-5 0 0) translate(100 0 0) scale(0.02 0.02 0.01) translate(0 0 0.4) scale(10 6 1)
d3 mypath2
q rotate(-5 0 0) translate(-100 0 0) scale(0.02 0.02 0.01) translate(0 0 0.2) scale(10 6 1)
d3 mypath2

; bottom
i 2
q rotate(-75 0 0) translate(0 140 0) scale(0.1 0.1 0.01) translate(0 0 0.4) scale(10 6 1)
d3 mypath
q rotate(-75 0 0) translate(-300 140 0) scale(0.1 0.1 0.01) translate(0 0 0.4) scale(10 6 1)
d3 mypath
q rotate(-75 0 0) translate( 300 140 0) scale(0.1 0.1 0.01) translate(0 0 0.4) scale(10 6 1)
d3 mypath

; top
i 3
q rotate(-75 0 0) translate(0 -140 0) scale(0.1 0.1 0.01) translate(0 0 0.4) scale(10 6 1)
d3 mypath
q rotate(-75 0 0) translate(-300 -140 0) scale(0.1 0.1 0.01) translate(0 0 0.4) scale(10 6 1)
d3 mypath
q rotate(-75 0 0) translate( 300 -140 0) scale(0.1 0.1 0.01) translate(0 0 0.4) scale(10 6 1)
d3 mypath

w3off

p border
r 640 100
z

i 6
k fill
M 0 0
d border

M 0 380
d border
