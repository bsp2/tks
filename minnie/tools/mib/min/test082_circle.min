
; geo_scale / geo_div scales framebuffers, blits, and paths
; geo_div 1

; seg_scale scales number of path subdivision segments (splines, ellipses, round line joints)
;seg_scale 0.125

geo 640 480
pal #eee #6db #547 #7cb #fff #9dc #779 #498

; clear screen
f 0

; set geo transform (pre-translates, scales, post-translates subsequent path coords)
gxf -320 -240 2 2 320 240

; define (closed) circle path
p mycircle
seg 64
M 320 240
circle 100 100
z

; draw filled path
i 1
k fill
seg 8
h b
d mycircle

; draw stroked path
i 6
k 8
seg 8
h bevel
d mycircle
