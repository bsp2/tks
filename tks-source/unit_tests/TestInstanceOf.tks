
module MTestInstanceOf;

class TestInstanceOf_CInterface {
}

class TestInstanceOf_CBase extends TestInstanceOf_CInterface {
}

class TestInstanceOf_CDerived extends TestInstanceOf_CBase, TestInstanceOf_CInterface {
}


class TestInstanceOf : TestCase {

   TestInstanceOf_CDerived cderived;
   TestInstanceOf_CBase cbase;
   File cfile;
   Stream cstream;
   TestInstanceOf_CInterface cinterface;
   TestInstanceOf_CInterface cinterface_base;
   TestInstanceOf_CInterface cinterface_derived;

   pre() {
      cinterface_base <= new TestInstanceOf_CBase();
      cinterface_derived <= new TestInstanceOf_CDerived();
   }

   test1() {
      assertq(true, cderived instanceof TestInstanceOf_CBase);
   }

   test2() {
      assertq(true, cderived instanceof TestInstanceOf_CDerived);
   }

   test3() {
      assertq(true, cbase instanceof TestInstanceOf_CBase);
   }

   test4() {
      assertq(false, cbase instanceof TestInstanceOf_CDerived);
   }

   test5() {
      assertq(true, cfile instanceof Stream);
   }

   test6() {
      assertq(true, cfile instanceof File);
   }

   test7() {
      assertq(true, cstream instanceof Stream);
   }

   test8() {
      assertq(false, cstream instanceof File);
   }

   test9() {
      assertq(true, File instanceof Stream);
   }

   test10() {
      assertq(false, Stream instanceof File);
   }

   test11() {
      assertq(true, TestInstanceOf_CDerived instanceof TestInstanceOf_CBase);
   }

   test12() {
      assertq(false, TestInstanceOf_CBase instanceof TestInstanceOf_CDerived);
   }

   test13() {
      assertq(true, cderived instanceof TestInstanceOf_CInterface);
   }

}
