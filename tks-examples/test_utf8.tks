// 17Jan2020

String buf;
if(buf.loadLocal("utf8.txt", true/*bRemoveCR*/))
{
   //
   // UTF-8 to ASCII
   //
   String sASCII;
   buf.utf8ToASCII() => sASCII;
   sASCII.replaceChar(26/*sub*/, '?');
   trace "sASCII=\""+sASCII+"\"";

   //
   // UTF-8 to CP-1252
   //
   //  (note) same as ISO8859-1 except for 0x80..0x9F area (ctl codes in ISO)
   //  (note) CP1252 is the HTML5 default encoding for text labeled as ISO8859-1
   //
   String sCP1252;
   buf.utf8ToCP1252() => sCP1252;
   sCP1252.replaceChar(26/*sub*/, '?');
   trace "sCP1252=\""+sCP1252+"\"";
   if(sCP1252.saveLocal("out_cp1252.txt"))
      trace "[...] wrote \"out_cp1252.txt\"";
   
   //
   // CP-1252 to UTF-8 (w/o BOM)
   //
   String sUTF8;
   sCP1252.cp1252ToUTF8(false/*bom*/) => sUTF8;
   trace "sUTF8=\""+sUTF8+"\"";
   if(sUTF8.saveLocal("out_utf8.txt"))
      trace "[...] wrote \"out_utf8.txt\"";

   //
   // CP-1252 to UTF-8 (w/ BOM)
   //
   String sUTF8_BOM;
   sCP1252.cp1252ToUTF8(true/*bom*/) => sUTF8_BOM;
   trace "sUTF8_BOM=\""+sUTF8_BOM+"\"";
   if(sUTF8_BOM.saveLocal("out_utf8_bom.txt"))
      trace "[...] wrote \"out_utf8_bom.txt\"";
}
