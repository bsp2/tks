// tests vector-like buffer writes

Buffer b; b.size = 1024;

b.add2f(1.1, 2.2);
b.add3f(3.3, 4.4, 5.5);
b.add4f(6.6, 7.7, 8.8, 9.9);

trace "write offset: "+b.offset;
b.offset = 0;
loop(9)
  trace b.f32;

