<xfm>
  <Panel dir=TOP align=expandx>

    <SizeGroupX id=lb_top/>

    <Panel dir=BOTTOM>
      <Button id=bt_save
              dir=LEFT
              align=baseline
              caption="Save"
              toolTipCaption="Save DrumKit preset (consolidate samples)"
              padLeft=10
              setkbdfocusonmouse=0
              />

      <Button id=bt_load
              dir=LEFT
              align=baseline
              caption="Load.."
              toolTipCaption="Load DrumKit preset (show SamplePadPresetDialog)"
              padLeft=10
              setkbdfocusonmouse=0
              />

      <TextField id=tf_kit_name
                 dir=LEFT
                 align=baseline
                 cols=24
                 toolTipCaption="Kit Name\n\n (note) also used as folder name when exporting kit samples to sample repository\n\n (note) kit repository path is \"$PATH\""
                 />

      <Label dir=LEFT
             align=baseline
             caption="Kit:"
             textPlacement=RIGHT
             fillBG=0
             padLeft=0
             sizeGroup=lb_top
             />
    </Panel>

    <Panel dir=BOTTOM align=expandx>
      <TextField id=tf_kit_info
                 dir=CENTER
                 align=expandx;baseline
                 toolTipCaption="Kit Info\n\n (note) Arbitrary kit description / info text (e.g. performance controllers, sample sources, ..)"
                 padRight=4
                 />

      <Label dir=LEFT
             align=baseline
             caption="Info:"
             textPlacement=RIGHT
             fillBG=0
             padLeft=0
             sizeGroup=lb_top
             />
    </Panel>

    <Panel dir=BOTTOM align=expandx>
      <CheckBox id=cb_midi_follow
                dir=RIGHT
                align=baseline
                caption="MIDI"
                toolTipCaption="When checked, edit variation / pad follows MIDI input"
                padLeft=4
                setkbdfocusonmouse=0
                />

      <Button id=bt_kit_nsp_to_pads
              dir=LEFT
              align=baseline
              caption="To Pads"
              toolTipCaption="Update pad sample namespaces\n\n (note) skips samples that are referenced outside this drumkit"
              padLeft=4
              setkbdfocusonmouse=0
              />

      <Button id=bt_nsp_from_kit
              dir=LEFT
              align=baseline
              caption="From kit"
              toolTipCaption="Set namespace from kit\n\n (note) lazy-create namespace \"$NSP\""
              padLeft=4
              setkbdfocusonmouse=0
              />

      <ComboField id=cf_kit_nsp
                  dir=LEFT
                  align=baseline
                  name="KitNSP"
                  options="Namespace;Namespace;Namespace;Namespace"
                  toolTipcaption="Default Kit Namespace\n\n (note) used when importing samples or consolidating kit samples"
                  provideEdited=1
                  addordelete=0
                  padLeft=0
                  />

      <Label dir=LEFT
             align=baseline
             caption="Namespace:"
             textPlacement=RIGHT
             fillBG=0
             padLeft=0
             sizeGroup=lb_top
             />
    </Panel>

    <Panel dir=BOTTOM align=expandx>

      <Panel dir=RIGHT align=baseline>

        <ComboBox id=cm_var_base_note
                  name="VBaseNt"
                  dir=LEFT
                  align=baseline
                  toolTipCaption="Variation-select MIDI base note\n\n (note) default=C-3"
                  padLeft=0
                  setkbdfocusonmouse=0
                  />

        <CheckBox id=cb_perf_ctl_only
                  dir=LEFT
                  align=baseline
                  nocaption=1
                  toolTipCaption="When checked, update perfctls when variation is selected but continue playing previous variation pads\n\n (note) i.e. when checked, variation is only used for its performance controller settings"
                  padLeft=0
                  setkbdfocusonmouse=0
                  />

        <ComboField id=cf_variation
                    dir=LEFT
                    align=baseline
                    cols=7
                    name="Var"
                    options="filled;in;at;runtime"
                    optionSizeReserve="my var"
                    toolTipcaption="Variation\n\n (note) Pad Common settings are stored independent of variation\n\n (note) Sample settings are stored per variation / pad (=> up to 256 pad configurations)\n (note) initial pad performance ctls are edited by opening the sample page via pad click\n\n (note) MIDI notes C-3..G-3 (36..43) select the currently active drum kit variation (seamless switch)\n\n (note) MIDI notes G#3..B-3 (44..47) select the variation-change lane send level/pan slew speed\n            (G#3=instant..B-3=slow) (hold LALT to change it for the current pad only)\n\n (note) hold LCTRL to select variation w/o playing it"
                    provideEdited=1
                    addordelete=0
                    autoRemoveText="<empty>"
                    padLeft=0
                    />

        <Label dir=LEFT
               align=baseline
               caption="Var:"
               textPlacement=RIGHT
               fillBG=0
               padLeft=10
               />
      </Panel>

      <Panel dir=CENTER align=baseline>
        <Button id=bt_tools
                dir=LEFT
                align=baseline
                caption="Tools.."
                toolTipCaption="Show tools menu"
                padLeft=2
                setkbdfocusonmouse=0
                />
      </Panel>

