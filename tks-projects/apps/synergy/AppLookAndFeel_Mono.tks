   protected virtual initNodeTrackerPatternViewColors() {
      // C-6a7f00

      LookAndFeel lnf <= UI.GetLookAndFeel(LookAndFeel.MONO);
      int bg32 = lnf.colors[LookAndFeel.COLOR_CONTROL_BG] | 0xFF000000;

      // 00000 00 C-00ff33
      int C0 = 0xff227722;  // song offset
      int C1 = 0xff507750;  // pattern offset
      int C2 = 0xff7aaa7a;  // Even ctl
      int C3 = 0xff9ccc9c;  // Odd ctl
      int C4 = 0xff55aa55;  // Even note-off ctl
      int C5 = 0xff77ff77;  // Odd note-off ctl
      int C6 = 0xff55ff55;  // Pattern start marker

      int TV_C2 = 0xff55aa55;  // Even ctl
      int TV_C3 = 0xff77cc77;  // Odd ctl
      int TV_C4 = C4;        // Even note-off ctl
      int TV_C5 = C5;        // Odd note-off ctl

      calcPatternViewColors(bg32, C0, C1, C2, C3, C4, C5, C6, TV_C2, TV_C3, TV_C4, TV_C5);

      nt_celcolor_palette = [
         #00000000,   //  0: default-type a
         #10000000,   //  1: default-type b
         #2f004000,   //  2: CTL_INSTR
         #01000000,   //  3: CTL_NOTE a
         #0E000000,   //  4: CTL_NOTE b
         #ec007700,   //  5: CTL_DUR a
         #6c00ff00,   //  6: CTL_DUR b
         #a0006500,   //  7: CTL_VEL a
         #4a00ff00,   //  8: CTL_VEL b
         #28004800,   //  9: CTL_POLYAT a
         #3e008600,   // 10: CTL_POLYAT b
         #113f603f,   // 11: CTL_PC         // 40ffe77b
