      </Panel>

    </Panel>


    <Panel dir=BOTTOM sizeY="10%" align=expandx >
      <Panel dir=CENTER sizeX="100%" align=center>
        <SizeGroupY id=sgy_bt/>
        <Panel dir=LEFT sizeX="70%">
          <Button id=bt_save
                  dir=RIGHT
                  align=centerY
                  style=flat
                  caption="Save"
                  font=big5
                  padding=12;12;12;12
                  toolTipCaption="Save project\n\n (note) lctrl-s"
                  icon=prj_save
                  sizeGroup=sgy_bt
                  />
          <Button id=bt_saveas
                  dir=RIGHT
                  align=centerY
                  style=flat
                  caption="Save As.."
                  font=big5
                  padding=12;12;12;12
                  toolTipCaption="Save project (pick new file)\n\n (note) lctrl-lshift-s"
                  icon=prj_save
                  sizeGroup=sgy_bt
                  />
          <Button id=bt_load
                  dir=LEFT
                  align=centerY
                  style=flat
                  caption="Load.."
                  font=big5
                  padding=12;12;12;12
                  toolTipCaption="Load project\n\n (note) lctrl-l"
                  icon=prj_load
                  sizeGroup=sgy_bt
                  />
        </Panel>

        <Panel dir=LEFT sizeX="30%">
          <Button id=bt_new
                  dir=LEFT
                  align=centerY
                  style=flat
                  caption="New.."
                  font=big5
                  padding=12;12;12;12
                  toolTipCaption="New project\n\n (note) auto-loads template project file (if it exists)"
                  icon=prj_new
                  sizeGroup=sgy_bt
                  />
        </Panel>
      </Panel>
    </Panel>

  </Panel>
</xfm>
