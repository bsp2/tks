// port margins

include diagram.gi

col_padding=20
row_padding=20

style def {  // (note) update style 'def' (initially declared in 'diagram.gi')
  bgcolor = #eef8fa
  edge_width         = 3.5
  edge_width_start   = 0.25
  edge_width_end     = 3
}

row=" e "
row="i  "

e [s=128] ports {
  margin = 25%,80%,75%,40%
  t1:t t2:t t3:t
  l1:l l2:l
  b1:b b2:b b3:b
  r1:r r2:r
}

i->e:b1
