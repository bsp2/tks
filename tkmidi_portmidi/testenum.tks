
use tkmidi;

// enumerate input devices
int numIn = MIDIIn.GetNumDevices();
trace "found "+numIn+" input device(s):";
int inIdx = 0;
loop(numIn)
{
   trace "midiin["+inIdx+"] name=\""+MIDIIn.GetDeviceNameByIdx(inIdx)+"\"";
   inIdx++;
}

// enumerate output devices
int numOut = MIDIOut.GetNumDevices();
trace "\nfound "+numOut+" output device(s):";
int outIdx = 0;
loop(numOut)
{
   trace "midiout["+outIdx+"] name=\""+MIDIOut.GetDeviceNameByIdx(outIdx)+"\"";
   outIdx++;
}
