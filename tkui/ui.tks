   protected static CancelSchedule2(List _timerList, TimerAction _ta) {
      if(null != _ta)
      {
         ListNode *t, *c <= _timerList.head;
         TimerAction *ta;
         while(null != c)
         {
            ta <= c.objectValue;
            if(@(ta)==@(_ta))
            {
               t <= c;
               c <= c.next;
               //trace "xxx UI::CancelSchedule: removing ta="+ta.name;
               _timerList.remove(t);
               return true;
            }
            else
            {
               c <= c.next;
            }
         }
      }
   }

