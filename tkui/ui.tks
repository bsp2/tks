   static private HandleKeyRepeatEnd(Key _k) {
      if(_k.code <= 1)
         return;

      // trace "xxx HandleKeyRepeatEnd: _k.code="+_k.code;

      // Handle end of key repeat
      if(_k.released)
      {
         if(_k.code == repeat_key.code)
         {
            CancelKeyRepeat();
         }
      }
   }

