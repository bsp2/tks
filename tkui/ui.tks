         String sInputSource <= MacOSGetInputSource();
         if(null != sInputSource)
         {
            if(Configuration.debugLevel)
               trace "[dbg] UI::AutoDetectLocalToRawKeyTable<macOS>: current input source is \""+sInputSource+"\"";
